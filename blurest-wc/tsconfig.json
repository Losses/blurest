{
    "compilerOptions": {
        "target": "es2017",
        "lib": ["dom", "dom.iterable"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "incremental": true,
        "outDir": "es",
        "skipLibCheck": true
    },
    "include": ["src"]
}
